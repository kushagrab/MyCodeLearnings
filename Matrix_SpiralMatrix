#include <iostream>
#include <bits/stdc++.h>
#include <vector>
#include <unordered_set>
#include <algorithm>
using namespace std;

int main()
{
	vector<vector<int>> matrix = {{1},{2},{3}};
	int m = matrix.size();
	int n = matrix[0].size();
	int top = 0, bottom = m-1, left = 0, right = n-1;

    while(top<=bottom && left<=right)
    {
        for(int i=left;i<=right;i++)
        {
            cout << matrix[top][i] << " ";
        }
        top++;

        for(int i=top;i<=bottom;i++)
        {
            cout << matrix[i][right] << " ";
        }
        right--;

        if(top<=bottom)
        {
            for(int i=right;i>=left;i--)
            {
                cout << matrix[bottom][i] << " ";
            }
            bottom--;
            cout << endl;    
        }
    
        if(left <= right)
        {
            for(int i=bottom;i>=top;i--)
            {
                cout << matrix[i][left] << " ";
            }
            left++;    
        }
    }
    
	return 0;
}
