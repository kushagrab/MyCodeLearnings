#include <iostream>
#include <bits/stdc++.h>
#include <vector>
#include <unordered_set>
using namespace std;

int main()
{
	vector<int> nums = {101,-1,4,2,1,3,0,100};
	int n = nums.size();
	if(n==0) return 0;
	
	int longest = -1;
	unordered_set<int> st;
	
	for(int i=0; i<n; i++) 
	{
		st.insert(nums[i]);
	}
	
	for(auto it:st) 
	{
		if(st.find(it-1) == st.end()) 
		{
			int count = 1;
			int x = it;
			while(st.find(x+1) != st.end()) 
			{
				x = x+1;
				count++;
			}
			longest = max(longest,count);
		}
	}

	return 0;
}
