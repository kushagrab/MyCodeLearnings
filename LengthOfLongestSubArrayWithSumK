#include <iostream>
#include <vector>
#include <unordered_map>
using namespace std;

int main()
{
    int currSum = 0;
    int k = 2;
    int maxLen = 0;
    vector<int> nums = {1,1,0,1,1};
    
    int i=0;
    int j=0;
    while(j<nums.size())
    {
        currSum+=nums[j];
        
        while(i<=j && currSum>k)
        {
            currSum-=nums[i];
            i++;
        }
        
        if(currSum == k)
        {
            maxLen = max(maxLen,j-i+1);
        }
        
        j++;
    }
    
    return maxLen;
}
