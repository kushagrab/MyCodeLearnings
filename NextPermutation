#include <iostream>
#include <bits/stdc++.h>
#include <vector>
using namespace std;

int main()
{
    vector<int> nums = {1,3,2};
    int n = nums.size();
    int idx = -1;
    for(int i=n-2;i>=0;i--)
    {
        if(nums[i]<nums[i+1])
        {
            idx = i;
            break;
        }
    }

    if(idx == -1)
    {
        reverse(nums.begin(),nums.end());
    }
    else
    {
        for(int i=n-1;i>idx;i--)
        {
            if(nums[idx] < nums[i])
            {
                swap(nums[idx],nums[i]);
                break;
            }
        }
        
        reverse(nums.begin()+idx+1,nums.end());
    }

    return 0;
}
